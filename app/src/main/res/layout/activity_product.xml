<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.ProductActivity">

    <!--toolbar, optional-->
    <ScrollView
        android:id="@+id/scroll"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!--        parent-->
        <LinearLayout
            android:paddingTop="15dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">


            <!--                发布者信息-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="horizontal"
                android:padding="5dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/buy_userAvatar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/buy_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="用户名"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center|start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="发布于" />

                <TextView
                    android:id="@+id/buy_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="2020545464" />



            </LinearLayout>

            <TextView
                android:id="@+id/buy_srcAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_background_short_gray"
                android:gravity="center|start"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_margin="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="宝贝位置：四川省南充市嘉陵区" />



            <!--            Price and carry fees-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/Orange" />

                <TextView
                    android:id="@+id/buy_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2999"
                    android:textColor="@color/Orange"
                    android:textSize="25sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="运费：￥" />

                <TextView
                    android:id="@+id/buy_carryFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15.00" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="原价：￥" />

                <TextView
                    android:id="@+id/buy_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15.00" />
            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="10dp"
                android:background="?android:attr/listDivider" />


            <TextView
                android:id="@+id/buy_productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="@string/product_name"
                android:textColor="@color/Black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/buy_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/product_description"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/buy_image1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:src="@mipmap/ic_launcher_v2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/buy_image2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="4dp"
                android:src="@mipmap/ic_launcher_v2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/buy_image3"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher_v2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/buy_image4"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher_v2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/buy_image5"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher_v2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/buy_image6"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher_v2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/buy_image7"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher_v2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/buy_image8"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher_v2"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/buy_image9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher_v2"
                android:visibility="gone" />


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:background="@color/Gray"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/add_to_cart"
            android:layout_width="135dp"
            android:layout_height="35dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_background_white"
            android:stateListAnimator="@null"
            android:text="加入购物车"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请登录后再购买！"
            android:id="@+id/buy_after_login"
            />

        <Button
            android:id="@+id/buy_right_now"
            android:layout_width="135dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/button_background_primary"
            android:text="立即购买"
            android:textColor="@color/White"
            android:textSize="18sp" />


    </LinearLayout>


</LinearLayout>