<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_background_short_gray"

    android:gravity="center|top"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/pop_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/pop_text_check_update"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="检查更新"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/img_close_check_update"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:src="@drawable/ic_close_black_24dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/text_current_version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="当前版本为：1.2.2"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_latest_version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="最新版本为：1.2.3"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_hint_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="检查到新版本，请点击下方按钮更新！"
            android:textSize="18sp" />
        <!--        已是最新版本无需更新！-->
        <Button
            android:id="@+id/button_check_update"
            android:layout_width="match_parent"

            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/button_background_primary"
            android:text="立即更新"
            android:textColor="@color/White"
            android:textSize="20sp" />


    </LinearLayout>
</LinearLayout>



